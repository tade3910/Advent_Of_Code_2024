#!/usr/bin/env perl
use strict;
use warnings;


sub print_hash {
    my ($hashRef) = @_;
    
    while (my ($key, $value) = each %$hashRef) {
        print "Key: $key => ";
        
        if (ref $value eq 'ARRAY') {
            print "Array: " . join(", ", @$value) . "\n";
        } else {
            print "Value: $value\n";
        }
    }
}

sub inWorld {
    (my $col,my$row,my$cols,my$rows) = @_;
    if($col < 0 or $col >= $cols or $row < 0 or $row >= $rows) {
        return 0;
    }
    return 1;
}

sub printList {
    my $arr = shift;
    foreach my $val(@$arr) {
        print $val.", "
    }
    print "\n";
}

sub lastAttempt {
    my($rows,$cols,$regionRef,$start) = @_;
    my $lines = 0;
    my %explored;
    my @stack = ([$start->[0],$start->[1]]); # start row col
    while(@stack) {
        my ($row, $col) = @{pop @stack};
        my $hash = "$row,$col";
        next unless !exists $explored{$hash};
        

    }
    #Go as far right
    
}


sub getLines { #Some logic error
    my($rows,$cols,$regionRef) = @_;
    my $lines = 0;
    my @prev;
    my $topRow = 0;
    my $count = 0;
       while($topRow < $rows) {
        if($count > 0) {
            last;
        }
        @prev = ();
        for my $col(0..$cols - 1) {
            my $hashEntry = "$topRow,$col";
            if(exists $regionRef->{$hashEntry}) {
                push @prev,1;
                if($count == 0 or !$prev[$col - 1]) {
                    $lines +=3;
                }
                $count++;
            } else {
                push @prev,0;
            }
            
        }
        $topRow++;
       }
    for my $row($topRow..$rows - 1) {
        print "lines are $lines\n";
        printList(\@prev);
        if($count == scalar %{$regionRef}) {
            last;
        }
        my @nextPrev;
        for my $col(0..$cols - 1) {
            my $hashEntry = "$row,$col";
            print "Checking entry $hashEntry of col $col\n";
            if(exists $regionRef->{$hashEntry}) {
                push @nextPrev,1;
                $count++;
                my $addedLines = 2;
                if ($prev[$col]) {
                    if($col == 0) {
                        print "First col top exists add nothing\n";
                        next;
                    }
                    print "top exists\n";
                    $addedLines--;
                } elsif($col ==$cols -1) {
                    print "No top at most right added line\n";
                    $lines++;
                }
                if($col != 0 and $nextPrev[$col -1]) {
                    print "left exists\n";
                    $addedLines--;
                }
                $lines += $addedLines;
            } else {
                push @nextPrev,0;
                if($prev[$col]) {
                    if($col == 0 or !$prev[$col -1]) {
                        print "adding bottom line\n";
                        $lines++;
                    }
                } elsif ($nextPrev[$col-1] and !$prev[$col-1]) {
                    print "adding right edge to prev\n";
                    $lines++;
                }
            }
        }
        @prev = @nextPrev;
    }

    #Count last row
    for my $col(0..$cols - 1) {
        if($prev[$col]) {
            if ($col == 0 or !$prev[$col - 1]) {
                #New bottom
                $lines++;
            }
        }
    }
    return $lines;
}

